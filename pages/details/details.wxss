/* pages/details/details.wxss */.app{
  width: 750rpx;
  height: 100vh;
  margin: 0;
  padding:0;
}
page {
  background-color: rgba(219, 218, 218, 0.603);
  height: 100%;
}
.swiper{
  height: 332px;
}
.demo-text-1{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 36rpx;
  height: 100%;
  width:100%
}
.demo-text-2{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 36rpx;
}
.demo-text-3{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #353535;
  font-size: 36rpx;
}
.swiperImg{
  height: 100%;
  width:100%
}
.describe{
  height: 8vh;
  width: 750rpx;
  line-height: 8vh;
}
.price{
  float: left;
  width:450rpx;
  height:8vh;
  background-color: rgba(235, 64, 92, 0.589);
  font-size: 45rpx
}
.price>text{
  color: white;
}
.priceR{
  font-size:25rpx; 
}
.endTime{
  float: left;
  width:300rpx;
  height:8vh;
  background-color: white;
}
.endTime>text{
  display: block;
  height: 4vh;
  line-height: 4vh;
  text-align: center;
  font-size: 20rpx;
}
/* 评价 */
.comment{
  height: 300px;
  width: 700rpx;
  padding: 0 25rpx;
  background-color: white;
  margin-top: 10px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.commentTitle{
  width: 700rpx;
  height: 50px;
}
.commentTitle>view{
  display: inline-block;
  width: 350rpx;
  height: 50px;
  line-height: 50px;
}
.commentTitleLeft{
  font-size: 18px;
}
.commentTitleLeft>text{
  font-size: 11px;
}
.commentTitleRight{
  text-align: right;
}
/* 评价详情 */
.commentList{
  height: 100px;
  width: 700rpx;
}
.commentListHeader{
  height: 30px;
  width: 700rpx;
  /* float: left; */
}
.rate{
  display: inline-block
}
.commentListBody{
  height: 80px;
  width: 700rpx;
}
.commentListBody>text{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
}
.details{
  width: 750rpx;
  height: 460px;
}
.detailsTitle{
  text-align: center;
  height: 8vh;
  line-height: 8vh;
}
/* 加入购物车 */
.cart{
  padding: 0 25rpx;
  padding-top: 10px;
  height: 300px;
}
.cartHeader{
  height: 100px;
  width: 700rpx;
  overflow: hidden
}
.cartHeaderLeft{
  display: inline-block;
  width: 650rpx;
}
.cartHeaderRight{
  float: right;
  width: 20px;
}
.cartHeaderLeft>image{
  float: left;
  height: 100px;
  width: 100px;
}
.cartPrice{
  float: left;
  height: 100px;
  width: 200px;
  margin-left: 10px;
}
.cartPrice .p{
  color: red;
  
}
.cartPrice .p .cp{
  font-size: 25px;
}
.cartNum{
  margin-top:20px; 
  height: 50px;
}
.setnum{
  float: right;
}
.btn{
  display: block;
  color: white;
  height: 40px;
  width: 700rpx;
  text-align: center;
  border-radius: 30px;
  line-height: 40px;
  font-size: 18px;
  background-color: red;
  position: absolute;
  bottom: 15px;
}